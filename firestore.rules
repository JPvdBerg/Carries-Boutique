rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Anyone can read products, only authenticated Admins can write
    match /products/{id} {
      allow read: if true;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    match /custom_styles/{id} {
      allow read: if true;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    // Customers can create orders and read ONLY their own
    match /orders/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
      allow update: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    // Users access their own profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Admin table protection
    match /admins/{userId} {
      allow read: if request.auth != null;
    }
    // Allow saving subscribers
    match /subscribers/{id} {
      allow create: if true;
    }
  }
}